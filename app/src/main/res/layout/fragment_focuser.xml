<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="farom.iparcos.FocuserFragment">

    <Button
        android:id="@+id/focuser_slower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/focuser_steps_box"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_toLeftOf="@+id/focuser_steps_box"
        android:layout_toStartOf="@+id/focuser_steps_box"
        android:text="-" />

    <Button
        android:id="@+id/focuser_faster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/focuser_steps_box"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_toEndOf="@+id/focuser_steps_box"
        android:layout_toRightOf="@+id/focuser_steps_box"
        android:text="+" />

    <Button
        android:id="@+id/focus_in"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/focuser_abort"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_toEndOf="@+id/focuser_abort"
        android:layout_toRightOf="@+id/focuser_abort"
        android:text="@string/focus_in" />

    <Button
        android:id="@+id/focus_out"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/focuser_abort"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_toLeftOf="@+id/focuser_abort"
        android:layout_toStartOf="@+id/focuser_abort"
        android:text="@string/focus_out" />

    <EditText
        android:id="@+id/focuser_steps_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:editable="false"
        android:ems="4"
        android:inputType="none"
        android:maxEms="8"
        tools:ignore="Deprecated" />

    <Button
        android:id="@+id/focuser_abort"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/stop_motion" />
</RelativeLayout>